extends layout/inner

block title
    title Contacts - Hypelitix

block content
    section.contacts.main-section-page
        .container
            .row
                .col-12.col-lg-6
                    .title.contacts__title
                        h1.h2(data-i18n="contacts-title") Our Contacts
                        span.line

                    p.contacts__description(data-i18n="contacts-desc") Upload the list of accounts using the administrative panel or via the corresponding API method.

                    .contacts__contacts
                        .contacts__contact
                            span(data-i18n="phone") Email:
                            span <a href="mailto:contact@hypelitix.com">contact@hypelitix.com</a>

                        .contacts__contact
                            span Phone:
                            span <a href="tel:+380931539090">+380 93 153 90 90</a>

                    .social-media
                        a(href="#").icon-contact-telegram
                        a(href="#").icon-contact-whatsapp
                        a(href="#").icon-contact-viber

                .col-12.col-lg-6
                    .contacts__form-question.form-question
                        picture
                            source(srcset=require('../img/dots-1.webp').default, type="image/webp")
                            img( src=require('../img/dots-1.png').default alt="" width="212px" height="80px").form-question__dot.decor-dot.dot-1
                        
                        .form-question__wrapper
                            h2.form-question__title(data-i18n="contacts-form-title") Have Question? Ask us!

                            .form-question__success-message
                                i.icon-email
                                    span.path1
                                    span.path2
                                    span.path3
                                span(data-i18n="contacts-form-message") Сообщение успешно отправлено!

                            form#contacts-form
                                .input-group.form-question__input.is-required
                                    .input__label(data-i18n="input-name")
                                    input( type="text" name="name" placeholder="Your Full Name" data-i18n-placeholder="input-name-placeholder")
                                    .input__error
                                        i !
                                        span(data-i18n="input-name-error") Wrong name

                                .input-group.form-question__input.is-required
                                    .input__label(data-i18n="input-email") Email
                                    input( type="email" name="email" placeholder="Your Email" data-i18n-placeholder="input-email-placeholder")
                                    .input__error
                                        i !
                                        span(data-i18n="input-email-error") Wrong Email address

                                .form-error-text No error

                                button( type="submit" data-i18n="btn-send" ).btn.btn-primary.form-question__btn Send
