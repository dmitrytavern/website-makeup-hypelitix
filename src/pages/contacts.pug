extends layout/inner

block title
    title Contacts - Hypelitix

block content
    section.contacts.main-section-page
        .container
            .row
                .col-12.col-lg-6
                    .title.contacts__title
                        h1.h2 Our Contacts
                        span.line

                    p.contacts__description Upload the list of accounts using the administrative panel or via the corresponding API method.

                    .contacts__contacts
                        .contacts__contact
                            span Email:
                            span <a href="mailto:contact@hypelitix.com">contact@hypelitix.com</a>

                        .contacts__contact
                            span Phone:
                            span <a href="tel:+380931539090">+380 93 153 90 90</a>

                    .social-media
                        a(href="#").icon-contact-telegram
                        a(href="#").icon-contact-whatsapp
                        a(href="#").icon-contact-viber

                .col-12.col-lg-6
                    .contacts__form-question.form-question
                        img(src=require('../img/dots-1.png').default alt="").form-question__dot.decor-dot.dot-1
                        .form-question__wrapper
                            h2.form-question__title Have Question? Ask us!

                            .form-question__success-message
                                i.icon-email
                                    span.path1
                                    span.path2
                                    span.path3
                                span Сообщение успешно отправлено!

                            form#contacts-form
                                .input-group.form-question__input.is-required
                                    .input__label Full Name
                                    input( type="text" name="name" placeholder="Your Full Name")
                                    .input__error
                                        i !
                                        | Wrong name

                                .input-group.form-question__input.is-required
                                    .input__label Email
                                    input( type="email" name="email" placeholder="Your Email")
                                    .input__error
                                        i !
                                        | Wrong Email address

                                button( type="submit" ).btn.btn-primary.form-question__btn Send
